<?xml version="1.0" encoding="UTF-8"?>
<config name="world">
	<!-- Overall information about the game world -->
	<option name="name" value="Solace" />
	<option name="author" value="Ryan Sandor Richards" />

	<default>
		<!--
			The default area and room represent the starting room for a new character.
			They are required or players will not be able to log new characters into
			the game world.
		-->
		<option name="area" value="medius" />
		<option name="room" value="prosperitas" />
	</default>

	<!-- Clock options -->
	<clock>
		<!-- Unit for each clock cycle for the game clock. -->
		<option name="tick" value="1000" />
	</clock>

	<!-- Shop options -->
	<shop>
		<option name="default.buy" value="0.5" />
		<option name="default.sell" value="0.5" />
		<option name="restock" value="600" />
	</shop>

	<!-- Defines coloring for various game objects -->
	<colors>
		<room>
			<option name="exit" value="{r}" />
			<option name="object" value="{y}" />
			<option name="look" value="{g}" />
		</room>
	</colors>

	<item>
		<!-- How many levels below an ithem's level you can be to wear it -->
		<option name="level-offset" value="10"/>
	</item>

	<!-- Recovery options -->
	<recovery>
		<!-- How many ticks between each recovery cycle -->
		<option name="ticks" value="6" />
	</recovery>
</config>
